<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/activity10_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/logo"
        android:contentDescription="Logo" />

    <android.support.v4.view.ViewPager
        android:id="@+id/activity10_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/activity10_logo"
        android:layout_above="@+id/facebook_login_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/activity10_viewpager_dots_holder"
        android:layout_alignBottom="@+id/activity10_viewpager"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


    </LinearLayout>


    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="30dp" />




</RelativeLayout>