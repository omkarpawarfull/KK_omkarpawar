<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/activity13_question1_txtview_title"
        android:layout_alignParentTop="true"
        android:text="@string/app_name"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:textColor="@android:color/white"
        android:background="@color/Purple"/>

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/activity13_question1_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity13_question1_avatar_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar_add_photo"
            app:civ_border_width="30dp"
            app:civ_border_color="@android:color/white"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circular_progress_background"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="33"  />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity13_question1_txtview_gender_interested"
        android:text="@string/gender_interested"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="@color/Purple"
        android:layout_below="@+id/activity13_question1_avatar"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity13_question1_txtview_gender_interested"
        android:layout_marginTop="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp" >
        <CheckBox
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/activity13_question1_checkbox_male"
            android:checked="false"
            android:button="@drawable/chkbox_selector_gender_interested_male"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>

        <CheckBox
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/activity13_question1_checkbox_female"
            android:checked="false"
            android:button="@drawable/chkbox_selector_gender_interested_female"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>
    </RelativeLayout>

    <ImageButton
        style="@style/onboarding_next_btn"
        android:id="@+id/activity13_question1_imgbtn_next"
        android:background="@drawable/arrow_next_black"
        android:backgroundTint="@color/Turquoise" />


    
    
</RelativeLayout>