<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="@color/Purple"/>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/activity13_question3_avatar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity13_question3_avatar_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/avatar_add_photo"
            app:civ_border_width="15dp"
            app:civ_border_color="@android:color/white"/>

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity13_question3_prgbar"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:background="@drawable/circular_progress_background"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="100"  />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/activity13_question3_scrollview"
        android:layout_below="@+id/activity13_question3_avatar"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--LOCATION-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_location_title"
                    android:text="Location"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_location_content"
                    android:layout_below="@+id/activity13_question3_txtview_location_title"
                    android:layout_marginBottom="3dp" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--AGE-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                   style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_age_title"
                    android:text="Age"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_age_content"
                    android:layout_below="@+id/activity13_question3_txtview_age_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--HEIGHT-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_height_title"
                    android:text="Height"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_height_content"
                    android:layout_below="@+id/activity13_question3_txtview_height_title"
                    android:text="@string/default_profile_height" />
                <ImageButton
                    style="@style/profile_advance_button"
                    android:id="@+id/activity13_question3_btn_height"
                    android:layout_below="@+id/activity13_question3_txtview_height_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--CAREER-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                   style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_career_title"
                    android:text="Career"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_career_content"
                    android:layout_below="@+id/activity13_question3_txtview_career_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--EDUCATION-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_education_title"
                    android:text="Education"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_education_content"
                    android:layout_below="@+id/activity13_question3_txtview_education_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--RELIGION-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_religion_title"
                    android:text="Religion"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_religion_content"
                    android:layout_below="@+id/activity13_question3_txtview_religion_title" />
                <ImageButton
                    style="@style/profile_advance_button"
                    android:id="@+id/activity13_question3_btn_religion"
                    android:layout_below="@+id/activity13_question3_txtview_religion_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>
            <!--COMMUNITY-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <TextView
                    style="@style/profile_title"
                    android:id="@+id/activity13_question3_txtview_community_title"
                    android:text="Community"/>
                <TextView
                    style="@style/profile_content"
                    android:id="@+id/activity13_question3_txtview_community_content"
                    android:layout_below="@+id/activity13_question3_txtview_community_title" />
                <ImageButton
                    style="@style/profile_advance_button"
                    android:id="@+id/activity13_question3_btn_community"
                    android:layout_below="@+id/activity13_question3_txtview_community_title" />
                <View style="@style/profile_separator" /> <!--Draw a line to separate-->
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/activity13_question3_btn_confirm"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="40dp"
                android:text="@string/profile_info_confirm"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:background="@color/Turquoise"/>


        </LinearLayout>
    </ScrollView>



</RelativeLayout>