<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="onboarding_back_btn">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/arrow_back_black</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="onboarding_next_btn">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/arrow_next_black</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="look_for_types_checkbox">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:checked">false</item>
    </style>
    <style name="look_for_types_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="profile_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="profile_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
        <!--<item name="android:layout_marginBottom">2dp</item>-->
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textColor">@color/Turquoise</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="profile_advance_button">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/arrow_advance</item>
    </style>
    <style name="profile_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/line_separator</item>
    </style>
    <style name="list_and_selector_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">36dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@color/Purple</item>
    </style>
    <style name="list_and_selector_backBtn">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:background">@drawable/arrow_back_white</item>
    </style>
    <style name="free_trial_button_with_icon">
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">15dp</item>
    </style>
    <style name="free_trial_viewpager_tick">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/free_trial_tick</item>
    </style>
    <style name="free_trial_viewpager_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="dashboard_tab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/Turquoise</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/chkbox_dashboard_tab_unchecked</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
    </style>


</resources>
