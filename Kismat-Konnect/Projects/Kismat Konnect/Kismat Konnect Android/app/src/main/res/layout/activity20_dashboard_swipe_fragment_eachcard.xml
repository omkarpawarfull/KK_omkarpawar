<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >



        <!-- Image -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity20_dashboard_swipe_fragment_pic"
                android:scaleType="fitXY"
                android:src="@drawable/avatar_add_photo"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity20_dashboard_swipe_fragment_left_sign"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/dashboard_swipe_like_sign"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity20_dashboard_swipe_fragment_right_sign"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/dashboard_swipe_dislike_sign"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity20_dashboard_swipe_fragment_pass"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dashboard_swipe_dislike_btn"
                android:text="Pass"
                android:textSize="15dp"
                android:textColor="@android:color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/activity20_dashboard_swipe_fragment_like"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dashboard_swipe_like_btn"
                android:text="Pass"
                android:textSize="15dp"
                android:textColor="@android:color/white"/>


        </RelativeLayout>




        <!-- Two block below -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >


            <!-- Left -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:background="@drawable/dashboard_candidate_frame"
                android:paddingLeft="20dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity20_dashboard_swipe_fragment_name"
                    android:layout_marginTop="10dp"
                    android:text="John"
                    android:textColor="@color/Turquoise"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity20_dashboard_swipe_fragment_age_and_location"
                    android:layout_marginTop="5dp"
                    android:text="26, Jersey City, NJ"
                    android:textColor="@color/Turquoise"
                    android:textSize="15dp" />

            </LinearLayout>

            <!-- Right -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:background="@drawable/dashboard_candidate_frame"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity20_dashboard_swipe_fragment_distance"
                    android:layout_marginTop="10dp"
                    android:text="9"
                    android:textColor="@color/Turquoise"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity20_dashboard_swipe_fragment_miles_away"
                    android:layout_marginTop="5dp"
                    android:text="miles away"
                    android:textColor="@color/Turquoise"
                    android:textSize="15dp"
                    android:gravity="right" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>